    <title>Sign Up | URL Shortener</title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <div class="wrapper">
        
    <!-- Navbar -->
    <nav>
        <div class="logo">URL Shortener</div>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/aboutus">About Us</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Register</a></li>
        </ul>
    </nav>

    <h1 class="heading">Create an Account</h1>

    <div class="container">
        <form method="POST" action="/user">
            <label for="name">Name:</label><br>
            <input type="text" id="name" name="name" class="URLBOX" placeholder="John Doe" required><br><br>

            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email" class="URLBOX" placeholder="example@email.com" required><br><br>

            <label for="password">Password:</label><br>
            <input type="password" id="password" name="password" class="URLBOX" placeholder="Enter your password" required><br><br>

            <input type="submit" class="sub" value="Sign Up">
        </form>
    </div>

    <!-- Footer -->
